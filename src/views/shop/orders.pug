extends ../layouts/main-layout.pug

block styles
	link(rel="stylesheet", href="/css/orders.css")

block content
	main
		if orders.length > 0
			ul.orders
				each o in orders
					li.orders__item
						h1 Order ##{o._id} - 
							a(href="/orders/" + o._id) Invoice
						ul.orders__products
							each p in o.products
								li.orders__products-item #{p.product.title} (#{p.quantity})
		else
			h1 Nothing there!